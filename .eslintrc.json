{
  "root": true,
  "overrides": [
    {
      "files": ["*.ts"],
      "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:prettier/recommended"
      ],
      "rules": {
        "no-console": "warn",
        "prettier/prettier": ["error", { "singleQuote": true }]
      }
    },
    {
      "files": ["*.html"],
      "extends": ["plugin:prettier/recommended"],
      "rules": {},
      "plugins": ["html"]
    }
  ]
}
